---
import linkedin from "../assets/linkedin.svg";
import github from "../assets/github.svg";
import email from "../assets/email.svg";
import discord from "../assets/discord.svg";

const bg =
  "before:block before:absolute before:-inset-1 before:-skew-y-6 hover:before:bg-pink-300 relative inline-block transition duration-500 ease-in-out hover:scale-110";
const icon = "relative hover:invert dark:invert";
---

<div class="flex flex-row gap-2">
  <a
    href="https://www.github.com/itsjoeoui/"
    target="_blank"
    rel="noopener noreferrer"
    aria-label="Joey's GitHub"
    class={bg}
  >
    <img class={icon} width="40" height="40" alt="Joey's GitHub" src={github} />
  </a>
  <a
    href="https://www.linkedin.com/in/itsjoeoui/"
    target="_blank"
    rel="noopener noreferrer"
    aria-label="Joey's Linkedin"
    class={bg}
  >
    <img
      class={icon}
      width="40"
      height="40"
      alt="Joey's Linkedin"
      src={linkedin}
    />
  </a>
  <a
    href="https://discordapp.com/users/481294021054955533"
    target="_blank"
    rel="noopener noreferrer"
    aria-label="Joey's Discord"
    class={bg}
  >
    <img
      class={icon}
      width="40"
      height="40"
      alt="Joey's Discord"
      src={discord}
    />
  </a>
  <a
    href="mailto:joey@jyu.dev"
    target="_blank"
    rel="noopener noreferrer"
    aria-label="Joey's Email"
    class={bg}
  >
    <img class={icon} width="40" height="40" alt="Joey's Email" src={email} />
  </a>
</div>
