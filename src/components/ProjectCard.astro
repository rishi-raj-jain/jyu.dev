---
export interface Props {
  title: string;
  desc: string;
  img: string;
  href: string;
}

const { title, desc, img, href } = Astro.props;
---

<div
  class="flex flex-1 text-gray-700 dark:text-gray-200 h-full flex-col bg-white dark:bg-black rounded-lg overflow-hidden transition duration-500 ease-in-out hover:bg-slate-100 dark:hover:bg-purple-900/30"
>
  <img class="h-48 w-full object-cover" src={img} alt={title} />
  <div class="py-2"></div>
  <h3 class="mx-4 font-bold text-lg">{title}</h3>
  <div class="py-2"></div>
  <p class="flex-grow mx-4 text-base">
    {desc}
  </p>
  <div class="py-2"></div>
  <a target="_blank" href={href} rel="noopener noreferrer">
    <button class="mx-4"> <p class="link-btn">learn more</p></button>
  </a>
  <div class="py-2"></div>
</div>
