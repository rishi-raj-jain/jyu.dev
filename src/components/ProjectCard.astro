---
export interface Props {
  title: string;
  desc: string;
  img: string;
  href: string;
}

const { title, desc, img, href } = Astro.props;
---

<div class="flex-shrink-0 w-64 mx-4">
  <div class="bg-white rounded-lg overflow-hidden">
    <img class="h-48 w-full object-cover" src={img} alt={title} />
    <div class="p-4">
      <h3 class="font-bold text-lg mb-2">{title}</h3>
      <p class="text-gray-700 text-base">{desc}</p>
    </div>
  </div>
</div>
